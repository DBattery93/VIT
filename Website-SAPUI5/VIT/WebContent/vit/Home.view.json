{
    "Type": "sap.ui.core.mvc.JSONView",
    "controllerName": "vit.Home",
    "content": [{
            "Type": "sap.ui.unified.Shell",
            "id": "myShell",
            "icon": "img/Logo_96x96_320dpi.png",
            "headItems": [
                {
                    "Type": "sap.ui.unified.ShellHeaderItem",
                    "tooltip": "Menu",
                    "icon": "sap-icon://menu2",
                    "press": "handlePressConfiguration"

                }
            ],
            "headEndItems": [
                {
                    "Type": "sap.ui.unified.ShellHeaderItem",
                    "tooltip": "Home",
                    "icon": "sap-icon://home",
                    "press": "handleHomePressed"
                }
            ],
            "content": [
                {
                    "Type": "sap.m.App",
                    "id": "app",
                    "backgroundImage": "img/startscreen_header.png",
                    "pages": [
                        {
                            "Type": "sap.m.Page",
                            "id": "home",
                            "showHeader": false,
                            "backgroundDesign": "Transparent",
                            "content": [
                                {
                                    "Type": "sap.ui.commons.Splitter",
                                    "splitterOrientation": "Horizontal",
                                    "splitterPosition": "50%",
                                    "minSizeFirstPane": "50%",
                                    "minSizeSecondPane": "50%",
                                    "firstPaneContent": [
                                        {
                                            "Type": "sap.ui.commons.layout.MatrixLayout",
                                            "height": "100%",
                                            "columns": 1,
                                            "rows": [
                                                {
                                                    "Type": "sap.ui.commons.layout.MatrixLayoutRow",
                                                    "cells": [
                                                        {
                                                            "Type": "sap.ui.layout.MatrixLayoutCell",
                                                            "hAlign": "Center",
                                                            "vAlign": "Bottom",
                                                            "content": [
                                                                {
                                                                    "Type": "sap.m.Button",
                                                                    "text": "Suchen",
                                                                    "icon": "sap-icon://search",
                                                                    "iconFirst": true,
                                                                    "width": "180px"
                                                                }
                                                            ]
                                                        }]
                                                },
                                                {
                                                    "Type": "sap.ui.commons.layout.MatrixLayoutRow",
                                                    "cells": [
                                                        {
                                                            "Type": "sap.ui.layout.MatrixLayoutCell",
                                                            "hAlign": "Center",
                                                            "vAlign": "Top",
                                                            "content": [
                                                                {
                                                                    "Type": "sap.m.Button",
                                                                    "text": "Melden",
                                                                    "icon": "sap-icon://action",
                                                                    "iconFirst": true,
                                                                    "width": "180px"
                                                                }
                                                            ]
                                                        }
                                                    ]
                                                }
                                            ]
                                        }],
                                    "secondPaneContent": [
                                        {
                                            "Type": "sap.m.Table",
                                            "columns": [
                                                {
                                                    "Type": "sap.m.Column",
                                                    "header": {
                                                        "Type": "sap.m.Label",
                                                        "text": "Linie"
                                                    }
                                                },
                                                {
                                                    "Type": "sap.m.Column",
                                                    "header": {
                                                        "Type": "sap.m.Label",
                                                        "text": "Richtung"
                                                    }
                                                }, {
                                                    "Type": "sap.m.Column",
                                                    "header": {
                                                        "Type": "sap.m.Label",
                                                        "text": "Versp√§tung"
                                                    }
                                                }, {
                                                    "Type": "sap.m.Column",
                                                    "header": {
                                                        "Type": "sap.m.Label",
                                                        "text": "Ankunft"
                                                    }
                                                }
                                            ]
                                        }
                                    ]
                                }


                            ]
                        }
                    ]
                }
            ],
            "paneContent": [
                {
                    "Type": "sap.m.List",
                    "items": [
                        {
                            "Type": "sap.m.ActionListItem",
                            "text": "Home"
                        },
                        {
                            "Type": "sap.m.ActionListItem",
                            "text": "Suche"
                        }, {
                            "Type": "sap.m.ActionListItem",
                            "text": "Melden"
                        }, {
                            "Type": "sap.m.ActionListItem",
                            "text": "Favoriten"
                        }]
                }
            ]


        }

    ]
}